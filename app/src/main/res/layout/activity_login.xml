<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:background="@color/media_controller_bg"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/ic_cancle_fork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_centerInParent="true"
            android:text="登录"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
        <TextView
            android:text="注册"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x135">
        <ImageView
            android:id="@+id/line_divider"
            android:layout_centerHorizontal="true"
            android:layout_width="1dp"
            android:background="#d7d7d7"
            android:layout_height="@dimen/x135" />

        <TextView
            android:id="@+id/pwd_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/x42"
            android:layout_toLeftOf="@id/line_divider"
            android:text="密码登录"
             />
        <TextView
            android:id="@+id/tv_code_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/x42"
            android:text="@string/code_login"
            android:layout_toRightOf="@id/line_divider"/>
        <ImageView
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d7d7d7" />
        <ImageView
            android:id="@+id/iv_indicate"
            android:background="@mipmap/login_line"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/line_divider"
            android:layout_height="3dp" />
    </RelativeLayout>
</LinearLayout>